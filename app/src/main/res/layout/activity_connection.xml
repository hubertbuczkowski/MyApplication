<?xml version="1.0" encoding="utf-8"?>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="25dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toStartOf="@+id/userSettings"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/logout"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/userSettings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="?attr/colorPrimary"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/toolbar3"
            app:layout_constraintTop_toTopOf="@+id/toolbar2"
            app:srcCompat="@drawable/ic_account_circle_white_24dp" />

        <ImageButton
            android:id="@+id/logout"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="?attr/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_power_settings_new_black_24dp" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="50dp"
            app:layout_constraintBottom_toTopOf="@+id/toolbar4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar3"
            app:layout_constraintVertical_bias="0.009">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cs1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <at.grabner.circleprogress.CircleProgressView
                    android:id="@+id/circleView"
                    android:layout_width="258dp"
                    android:layout_height="186dp"
                    android:layout_marginTop="32dp"
                    CircleProgressView:cpv_autoTextSize="true"
                    CircleProgressView:cpv_barColor="@color/primary"
                    CircleProgressView:cpv_barWidth="35dp"
                    CircleProgressView:cpv_innerContourSize="0dp"
                    CircleProgressView:cpv_maxValue="2500"
                    CircleProgressView:cpv_outerContourSize="0dp"
                    CircleProgressView:cpv_rimColor="@color/primary_light"
                    CircleProgressView:cpv_rimWidth="35dp"
                    CircleProgressView:cpv_seekMode="true"
                    CircleProgressView:cpv_showUnit="true"
                    CircleProgressView:cpv_spinColor="@color/primary"
                    CircleProgressView:cpv_textColor="@color/primary_dark"
                    CircleProgressView:cpv_textScale="1"
                    CircleProgressView:cpv_unit="Calories"
                    CircleProgressView:cpv_unitColor="@color/primary_light"
                    CircleProgressView:cpv_unitPosition="bottom"
                    CircleProgressView:cpv_unitScale="1"
                    CircleProgressView:cpv_value="725"
                    CircleProgressView:layout_constraintHorizontal_bias="0.497"
                    CircleProgressView:layout_constraintLeft_toLeftOf="parent"
                    CircleProgressView:layout_constraintRight_toRightOf="parent"
                    CircleProgressView:layout_constraintTop_toBottomOf="@+id/textView6" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/addButton"
                    android:layout_width="56dp"
                    android:layout_height="83dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginStart="288dp"
                    android:layout_marginTop="750dp"
                    android:clickable="true"
                    app:backgroundTint="@color/colorAccent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.92"
                    app:srcCompat="@drawable/ic_add_circle_outline_black_24dp" />

                <TextView
                    android:id="@+id/steps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="32dp"
                    CircleProgressView:layout_constraintEnd_toEndOf="parent"
                    CircleProgressView:layout_constraintStart_toStartOf="parent"
                    CircleProgressView:layout_constraintTop_toBottomOf="@+id/circleView" />

                <TextView
                    android:id="@+id/bodyCals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    CircleProgressView:layout_constraintEnd_toStartOf="@+id/textView4"
                    CircleProgressView:layout_constraintStart_toStartOf="parent"
                    CircleProgressView:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="+"
                    CircleProgressView:layout_constraintEnd_toStartOf="@+id/exerciseCals"
                    CircleProgressView:layout_constraintStart_toEndOf="@+id/bodyCals"
                    CircleProgressView:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/exerciseCals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    CircleProgressView:layout_constraintEnd_toStartOf="@+id/textView6"
                    CircleProgressView:layout_constraintStart_toEndOf="@+id/textView4"
                    CircleProgressView:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="-"
                    CircleProgressView:layout_constraintEnd_toStartOf="@+id/Consumed"
                    CircleProgressView:layout_constraintStart_toEndOf="@+id/exerciseCals"
                    CircleProgressView:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/Consumed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    CircleProgressView:layout_constraintEnd_toStartOf="@+id/textView8"
                    CircleProgressView:layout_constraintStart_toEndOf="@+id/textView6"
                    CircleProgressView:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="="
                    CircleProgressView:layout_constraintEnd_toStartOf="@+id/leftCals"
                    CircleProgressView:layout_constraintStart_toEndOf="@+id/Consumed"
                    CircleProgressView:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/leftCals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:layout_marginTop="32dp"
                    CircleProgressView:layout_constraintEnd_toEndOf="parent"
                    CircleProgressView:layout_constraintStart_toEndOf="@+id/textView8"
                    CircleProgressView:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

        </ScrollView>

    </android.support.constraint.ConstraintLayout>

